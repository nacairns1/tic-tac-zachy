datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
  ongoingGames PlayerEntry[]
}

model PlayerEntry {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  boardId String 
  user User @relation(fields: [username], references: [username])
  username String
  piece String
  gameId String
  game Game @relation(fields: [gameId], references: [id])
  
  @@unique([boardId, username])
}

model Game {
  id      String         @id @default(auto()) @map("_id") @db.ObjectId
  gameState Int[]
  gameType String
  players PlayerEntry[]
  moveNumber Int
  active Boolean
  outcome String?
}
